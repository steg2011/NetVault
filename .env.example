# ── Database (app) ─────────────────────────────────────────────────────────────
DB_NAME=agncf
DB_USER=agncf_user
DB_PASSWORD=changeme_in_production
DATABASE_URL=postgresql+asyncpg://agncf_user:changeme_in_production@db:5432/agncf

# ── Gitea ──────────────────────────────────────────────────────────────────────
# Token created in Gitea UI → User Settings → Applications → Generate Token
GITEA_TOKEN=your-gitea-api-token-here
GITEA_ORG=agncf
# Gitea internal secrets — generate with: openssl rand -hex 32
GITEA_SECRET_KEY=changeme-gitea-secret-key-minimum-64-chars-pad-here-0000000000
GITEA_INTERNAL_TOKEN=changeme-gitea-internal-token-minimum-64-chars-pad-00000000000

# ── Credential encryption ──────────────────────────────────────────────────────
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=your-fernet-key-base64-encoded-44-chars-here=

# ── Global network fallback credentials (optional) ────────────────────────────
NET_USER_GLOBAL=
NET_PASS_GLOBAL=

# ── Application ────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
DEBUG=false
NORNIR_NUM_WORKERS=50
API_SEMAPHORE_LIMIT=30
